<%- include ('../partials/header'); %>
<link rel="stylesheet" href="/css/styleHome.css">
</head>
  <body style = "text-align:center;">
    <br>
	<br>
	<!-- Display basic profile info statically-->
	<div class = "box">
	<div class="border border-primary rounded" style="width:55%; margin:2% auto; padding: 1%; background: rgba(355, 355,355, 0.5);
    box-shadow: 0 5px 15px rgba(0, 0,0, 0.5);">
		<div>
			<div class="row">
				<div class="col">
					<div class="row row-cols-auto">
						<h1><%= user.name %></h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End -->

	<!-- Editing section-->
	<div class = ".content">
	<div class="border border-secondary rounded " style="width:55%; margin:2% auto; padding: 1%; background: rgba(355, 355,355, 0.5);
    box-shadow: 0 5px 15px rgba(0, 0,0, 0.5);">
	<form action="/users/profile" method="POST">
		
		<div class="d-flex justify-content-center">
			<label class="col-sm-2 col-form-label" for="fullName">Full Name:</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="fullName" id="fullName" value="<%= user.name %>">
			</div>
		</div>
		<br>

		<div class="d-flex justify-content-center">
			<label class="col-sm-2 col-form-label"  for="emailAddress">Email address:</label>
			<div class="col-sm-6">
				<input type="email" class="form-control" name="emailAddress" id="emailAddress" value="<%= user.email %>">
			</div>
		</div>
		<br>

		<div class="d-flex justify-content-center">
			<label  class="col-sm-2 col-form-label" for="passwordFirst">Password:</label>
			<div class="col-sm-6">
				<input type="password" class="form-control" id="passwordFirst" name="passwordFirst" value="">
			</div>
		</div>
		<br>

		<div class="d-flex justify-content-center">
			<label  class="col-sm-2 col-form-label" for="passwordConfirm">Confirm Password:</label>
			<div class="col-sm-6">
				<input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" value="">
			</div>
		</div>
		<br>

		<div class="d-flex justify-content-center">
			<label  class="col-sm-2 col-form-label" for="PhoneConfirm">Phone Number:</label>
			<div class="col-sm-6">
				<input type="number" class="form-control" id="phoneNum" name="PhoneNumber" value="<%= user.phone_no %>">
			</div>
		</div>
		<br>

		<div class="d-flex justify-content-center">
			<label  class="col-sm-2 col-form-label" for="dob">Date of Birth:</label>
			<div class="col-sm-6">
				<input type="date" class="form-control" id="dob" name="dob" value="<%= user.dob %>">
			</div>
		</div>
		<br>
		
		<br>
		
		<input type="submit" value="Update profile" class="btn btn-primary btn-block" style="height: fit-content; width: 20%; margin: 0 auto;">
	</div>
	</div>
</form>
	</div>
	<!-- End -->
		 
	<script>
		function edit()
		{
			document.getElementById('fullName').removeAttribute('readonly', true);
			document.getElementById('emailAddress').removeAttribute('readonly', true);
			document.getElementById('passwordFirst').removeAttribute('readonly', true);
			document.getElementById('passwordConfirm').removeAttribute('readonly', true);
			document.getElementById('phoneNum').removeAttribute('readonly', true);
			document.getElementById('fullName').removeAttribute('readonly', true);
		}
		function save()
		{
			document.getElementById('fullName').setAttribute('readonly', true);
			document.getElementById('emailAddress').setAttribute('readonly', true);
			document.getElementById('passwordFirst').setAttribute('readonly', true);
			document.getElementById('passwordConfirm').setAttribute('readonly', true);
			document.getElementById('phoneNum').setAttribute('readonly', true);
			document.getElementById('fullName').setAttribute('readonly', true);
		}
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
	<script src="../resources/js/scriptFeatures.js"></script>
<%- include ('../partials/footer'); %>
